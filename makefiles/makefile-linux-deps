	$(TEMP)/libtcod/release/gui/button.o \
	$(TEMP)/libtcod/release/gui/container.o \
	$(TEMP)/libtcod/release/gui/flatlist.o \
	$(TEMP)/libtcod/release/gui/hbox.o \
